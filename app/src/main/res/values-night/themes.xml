<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Test3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>

        <item name="colorPrimary">@color/martinique</item>
        <item name="colorPrimaryVariant">@color/martin</item>
        <item name="colorOnPrimary">@color/purple</item>

        <item name="colorSecondary">@color/cornflowerblue</item>
        <item name="colorSecondaryVariant">@color/malibu</item>
        <item name="colorOnSecondary">@color/mmalibu</item>

        <item name="colorTertiary">@color/bg</item>
        <item name="colorOnTertiary">@color/t_white</item>

    </style>

    <style name="background"><item name="android:background">@color/martinique</item></style>
    <style name="notesbg"><item name="android:background">@color/martin</item></style>
    <style name="textcolor"><item name="android:textColor">@color/purple</item></style>
    <style name="listbg"><item name="android:background">@color/t_white</item></style>
    <style name="titlecolor"><item name="android:textColor">@color/martinique</item></style>

    <style name="weekdaycolor"><item name="android:textColor">@color/cornflowerblue</item></style>
    <style name="datecolor"><item name="android:textColor">@color/malibu</item></style>
    <style name="monthcolor"><item name="android:textColor">@color/mmalibu</item></style>

    <!-- Alert Dialog -->
    <style name="MyThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple</item>
   </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple</item>
    </style>
    <!---->

    <style name="CustomMaterialDatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Style for the buttons -->
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>
    </style>

    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <!-- Style for the buttons -->
        <item name="android:textColor">@color/purple</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:background">@color/malibu</item>
        <item name="iconTint">@color/purple</item>
    </style>


</resources>