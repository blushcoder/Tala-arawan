<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true">
        <shape
            android:shape="oval">
            <size
                android:width="10dp" android:height="10dp" />
            <solid
                android:color="@color/t_white" />
            <stroke
                android:width="1dp"
                android:color="@color/martinique"/>
        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_moon"
        android:top="8dp"
        android:bottom="8dp"
        android:right="8dp"
        android:left="8dp"/>

</layer-list>